{
  "rules": {
    ".read": false,
    ".write": false,

    "users": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    "posts": {
      ".read": true,
      ".write": "auth != null",

      "$post_id": {
        ".write": "!data.exists() || (auth != null && data.child('userId').val() == auth.uid)",
        ".validate": "newData.hasChildren(['userId', 'postContent', 'timestamp', 'metrics', 'userInteractions'])",

        "userId": {
          ".validate": "newData.val() == auth.uid && (!data.exists() || data.val() == newData.val())"
        },

        "timestamp": {
          ".validate": "newData.isNumber()"
        },

        "postContent": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 600"
        },
        "$other": {
          ".validate": false
        }
      }
    }
  }
}
