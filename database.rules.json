{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "posts": {
          "$post_id": { ".validate": "newData.val() === true" }
        },
        "replies": {
          "$post_id": {
            "$reply_id": { ".validate": "newData.val() === true" }
          }
        },
        "postInteractions": {
          "$post_id": {
            ".validate": "newData.hasChildren(['score', 'parentId'])",

            "score": {
              ".validate": "newData.isNumber() && newData.val() >= -3 && newData.val() <= 3"
            },
            "parentId": { ".validate": "newData.isString()" }
          }
        }
      }
    },

    "posts": {
      ".indexOn": ["timestamp"],
      ".read": true,
      "$post_id": {
        ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)",
        ".validate": "!newData.exists() || (data.exists() || newData.hasChildren(['userId', 'postContent', 'timestamp', 'replyCount']))",

        "replyCount": {
          ".write": false,
          ".validate": "newData.isNumber()"
        },

        "userInteractions": {
          ".write": false
        },

        "userId": {
          ".validate": "!newData.exists() || (newData.val() === auth.uid && (!data.exists() || data.val() === newData.val()))"
        },
        "postContent": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 600)"
        },
        "timestamp": {
          ".validate": "!data.exists() || data.val() === newData.val()"
        },
        "editedAt": {
          ".validate": "!newData.exists() || newData.isNumber()"
        }
      }
    },

    "replies": {
      "$post_id": {
        ".read": true,
        ".write": "auth != null && root.child('posts/' + $post_id + '/userId').val() === auth.uid",

        "$reply_id": {
          ".write": "auth != null && ( (!data.exists() && root.child('posts/' + $post_id + '/userInteractions/' + auth.uid).exists()) || (data.exists() && data.child('userId').val() === auth.uid) )",

          ".validate": "!newData.exists() || (data.exists() || newData.hasChildren(['userId', 'postContent', 'timestamp', 'parentPostId', 'interactionScore', 'replyCount']))",

          "userInteractions": {
            ".write": false
          },
          "replyCount": {
            ".write": false,
            ".validate": "newData.isNumber()"
          },
          "userId": {
            ".validate": "!newData.exists() || newData.val() === auth.uid"
          },
          "parentPostId": {
            ".validate": "!newData.exists() || newData.val() === $post_id"
          },
          "postContent": {
            ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 600)"
          },
          "interactionScore": {
            ".validate": "newData.isNumber() && newData.val() >= -3 && newData.val() <= 3"
          },
          "timestamp": {
            ".validate": "!data.exists() || data.val() === newData.val()"
          },
          "editedAt": {
            ".validate": "!newData.exists() || newData.isNumber()"
          }
        }
      }
    }
  }
}
