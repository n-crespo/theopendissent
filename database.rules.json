{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      },
      "posts": {
        "$post_id": { ".validate": "newData.val() === true" }
      },
      "replies": {
        "$post_id": { "$reply_id": { ".validate": "newData.val() === true" } }
      }
    },

    "posts": {
      ".indexOn": ["timestamp"],
      ".read": true,
      "$post_id": {
        ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)",
        ".validate": "!newData.exists() || newData.hasChildren(['userId', 'postContent', 'timestamp', 'metrics'])",

        "metrics": {
          ".write": "auth != null && data.parent().exists()",
          "agreedCount": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "dissentedCount": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          },
          "replyCount": {
            ".validate": "newData.isNumber() && newData.val() >= 0"
          }
        },

        "userInteractions": {
          "$interactionType": {
            "$userId": {
              ".write": "auth != null && auth.uid === $userId",
              ".validate": "newData.isBoolean() || !newData.exists()"
            }
          }
        },

        "userId": {
          ".validate": "!newData.exists() || (newData.val() === auth.uid && (!data.exists() || data.val() === newData.val()))"
        },

        "postContent": {
          ".validate": "newData.isString() && newData.val().length <= 600"
        },

        "timestamp": {
          ".validate": "!data.exists() || data.val() === newData.val()"
        },

        "editedAt": {
          ".validate": "newData.isNumber()"
        }
      }
    },

    "replies": {
      "$post_id": {
        ".read": true,
        "$reply_id": {
          ".write": "auth != null && (root.child('posts/' + $post_id + '/userInteractions/agreed/' + auth.uid).val() === true || root.child('posts/' + $post_id + '/userInteractions/dissented/' + auth.uid).val() === true)",

          ".validate": "newData.hasChildren(['userId', 'postContent', 'timestamp', 'parentPostId', 'userInteractionType'])",

          "userId": { ".validate": "newData.val() === auth.uid" },
          "parentPostId": { ".validate": "newData.val() === $post_id" },
          "postContent": {
            ".validate": "newData.isString() && newData.val().length <= 600"
          },

          "userInteractionType": {
            ".validate": "newData.val() === 'agreed' || newData.val() === 'dissented'"
          }
        }
      }
    }
  }
}
