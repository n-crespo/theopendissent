{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        "posts": {
          "$post_id": { ".validate": "newData.val() === true" }
        },
        "replies": {
          "$post_id": {
            "$reply_id": { ".validate": "newData.val() === true" }
          }
        },
        "postInteractions": {
          "$type": {
            "$post_id": {
              ".validate": "!newData.exists() || newData.isString()"
            }
          }
        }
      }
    },

    "posts": {
      ".indexOn": ["timestamp"],
      ".read": true,
      "$post_id": {
        ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)",
        ".validate": "!newData.exists() || (data.exists() || newData.hasChildren(['userId', 'postContent', 'timestamp', 'replyCount']))",

        "replyCount": {
          ".write": false,
          ".validate": "newData.isNumber()"
        },

        "userInteractions": {
          ".write": false
        },

        "userId": {
          ".validate": "!newData.exists() || (newData.val() === auth.uid && (!data.exists() || data.val() === newData.val()))"
        },
        "postContent": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 600)"
        },
        "timestamp": {
          ".validate": "!data.exists() || data.val() === newData.val()"
        },
        "editedAt": {
          ".validate": "!newData.exists() || newData.isNumber()"
        }
      }
    },

    "replies": {
      "$post_id": {
        ".read": true,
        ".write": "auth != null && root.child('posts/' + $post_id + '/userId').val() === auth.uid",

        "$reply_id": {
          ".write": "auth != null && ( (!data.exists() && (root.child('posts/' + $post_id + '/userInteractions/agreed/' + auth.uid).exists() || root.child('posts/' + $post_id + '/userInteractions/dissented/' + auth.uid).exists())) || (data.exists() && data.child('userId').val() === auth.uid) )",

          ".validate": "!newData.exists() || (data.exists() || newData.hasChildren(['userId', 'postContent', 'timestamp', 'parentPostId', 'userInteractionType', 'replyCount']))",

          "userInteractions": {
            ".write": false
          },
          "replyCount": {
            ".write": false,
            ".validate": "newData.isNumber()"
          },
          "userId": {
            ".validate": "!newData.exists() || newData.val() === auth.uid"
          },
          "parentPostId": {
            ".validate": "!newData.exists() || newData.val() === $post_id"
          },
          "postContent": {
            ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 600)"
          },
          "userInteractionType": {
            ".validate": "!newData.exists() || (newData.val() === 'agreed' || newData.val() === 'dissented')"
          },
          "timestamp": {
            ".validate": "!data.exists() || data.val() === newData.val()"
          },
          "editedAt": {
            ".validate": "!newData.exists() || newData.isNumber()"
          }
        }
      }
    }
  }
}
