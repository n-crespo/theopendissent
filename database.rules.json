{
  "rules": {
    ".read": false,
    ".write": false,

    "users": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    "posts": {
      ".read": true,
      ".write": "auth != null",

      "$post_id": {
        ".write": "!data.exists() || data.child('userId').val() == auth.uid",

        "metrics": {
          ".write": "auth != null",
          "$metricKey": {
            ".validate": "newData.isNumber()"
          }
        },

        "postContent": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 600"
        },

        "timestamp": {
          ".validate": "newData.isNumber()"
        },

        "userId": {
          ".validate": "newData.val() == auth.uid && (!data.exists() || data.val() == newData.val())"
        },

        "userInteractions": {
          ".write": "auth != null",
          "$interactionType": {
            "$userId": {
              ".validate": "newData.isBoolean()"
            }
          }
        },

        "$other": {
          ".validate": false
        }
      }
    }
  }
}
